# Helm Chart for {{imageName}}
# Generated by Xaheen CLI on {{timestamp}}

apiVersion: v2
name: {{imageName}}
description: A Helm chart for {{projectType}} application {{imageName}}
type: application
version: {{chartVersion}}
appVersion: "{{imageTag}}"
home: https://github.com/your-org/{{imageName}}
sources:
  - https://github.com/your-org/{{imageName}}
maintainers:
  - name: {{maintainerName}}
    email: {{maintainerEmail}}
    url: {{maintainerUrl}}
keywords:
  - {{projectType}}
  - {{runtime}}
  - microservice
  - kubernetes
  - helm
annotations:
  category: Application
  licenses: MIT
  images: |
    - name: {{imageName}}
      image: {{registryUrl}}/{{imageName}}:{{imageTag}}
dependencies:
{{#if (eq projectType "fullstack")}}
  - name: postgresql
    version: "12.x.x"
    repository: https://charts.bitnami.com/bitnami
    condition: postgresql.enabled
  - name: redis
    version: "17.x.x"
    repository: https://charts.bitnami.com/bitnami
    condition: redis.enabled
{{/if}}
{{#if enablePrometheus}}
  - name: kube-prometheus-stack
    version: "45.x.x"
    repository: https://prometheus-community.github.io/helm-charts
    condition: monitoring.prometheus.enabled
{{/if}}
{{#if enableTracing}}
  - name: jaeger
    version: "0.x.x"
    repository: https://jaegertracing.github.io/helm-charts
    condition: tracing.jaeger.enabled
{{/if}}
{{#if enableLogging}}
  - name: loki-stack
    version: "2.x.x"
    repository: https://grafana.github.io/helm-charts
    condition: logging.loki.enabled
{{/if}}