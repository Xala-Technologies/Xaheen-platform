          "name": "instance",
          "type": "query",
          "label": "Instance",
          "query": "label_values(up{job=\"node-exporter\"}, instance)",
          "current": {
            "text": "All",
            "value": "$__all"
          },
          "includeAll": true,
          "multi": true,
          "refresh": 1,
          "datasource": "Prometheus"
        },
        {
          "name": "device",
          "type": "query",
          "label": "Network Device",
          "query": "label_values(node_network_receive_bytes_total{instance=~\"$instance\",device!=\"lo\"}, device)",
