# Development environment variables
# Generated by Xaheen CLI Terraform Generator

# Project configuration
project_name = "{{projectName}}"
environment  = "development"
owner        = "development-team@{{projectName}}.com"

# Regional configuration
{{#eq cloudProvider "aws"}}
region = "{{region}}"
{{/eq}}
{{#eq cloudProvider "azure"}}
location = "{{region}}"
{{/eq}}
{{#eq cloudProvider "gcp"}}
region     = "{{region}}"
project_id = "{{projectName}}-dev"
{{/eq}}

{{#if networking.vpc}}
# Networking configuration
{{#eq cloudProvider "aws"}}
vpc_cidr             = "10.0.0.0/16"
availability_zones   = ["{{region}}a", "{{region}}b", "{{region}}c"]
public_subnets       = ["10.0.1.0/24", "10.0.2.0/24", "10.0.3.0/24"]
private_subnets      = ["10.0.10.0/24", "10.0.20.0/24", "10.0.30.0/24"]
{{/eq}}
{{#eq cloudProvider "azure"}}
address_space       = ["10.0.0.0/16"]
public_subnets      = ["10.0.1.0/24", "10.0.2.0/24", "10.0.3.0/24"]
private_subnets     = ["10.0.10.0/24", "10.0.20.0/24", "10.0.30.0/24"]
{{/eq}}
{{#eq cloudProvider "gcp"}}
network_cidr        = "10.0.0.0/16"
public_subnets      = ["10.0.1.0/24", "10.0.2.0/24", "10.0.3.0/24"]
private_subnets     = ["10.0.10.0/24", "10.0.20.0/24", "10.0.30.0/24"]
{{/eq}}
enable_nat_gateway   = {{networking.enableNatGateway}}
enable_vpn_gateway   = false
{{/if}}

{{#if compute.instances}}
# Compute configuration (development settings)
{{#eq cloudProvider "aws"}}
instance_type = "t3.micro"
{{/eq}}
{{#eq cloudProvider "azure"}}
vm_size = "Standard_B1s"
{{/eq}}
{{#eq cloudProvider "gcp"}}
machine_type = "e2-micro"
{{/eq}}
min_size            = 1
max_size            = 2
desired_capacity    = 1
enable_load_balancer = false
enable_auto_scaling  = false
{{/if}}

# Storage configuration (development settings)
enable_object_storage = {{storage.objectStorage}}
enable_file_system   = false

{{#if storage.databases}}
{{#eq cloudProvider "aws"}}
db_engine            = "{{storage.databases.[0].engine}}"
db_version           = "{{storage.databases.[0].version}}"
db_instance_class    = "db.t3.micro"
db_allocated_storage = 20
{{/eq}}
{{#eq cloudProvider "azure"}}
db_sku_name = "S0"
{{/eq}}
{{#eq cloudProvider "gcp"}}
database_version = "POSTGRES_15"
db_tier         = "db-f1-micro"
db_disk_size    = 10
{{/eq}}
{{/if}}

# Security configuration (development settings)
enable_kms             = false
enable_secrets_manager = {{security.secretsManager}}
enable_waf            = false
enable_certificate_manager = false
iam_roles             = {{#if security.iamRoles}}{{toJson security.iamRoles}}{{else}}[]{{/if}}

# Monitoring configuration (development settings)
enable_cloudwatch = {{monitoring.cloudWatch}}
enable_logging    = {{monitoring.logging}}
enable_alerting   = false
enable_tracing    = false

# Compliance configuration (development settings)
encryption_enabled     = false
backup_enabled        = {{compliance.backup}}
backup_retention_days = 7
audit_logs_enabled    = false

# Development-specific settings
alert_email = "dev-alerts@{{projectName}}.com"