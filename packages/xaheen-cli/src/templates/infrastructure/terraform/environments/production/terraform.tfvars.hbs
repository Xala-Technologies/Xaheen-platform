# Production environment variables
# Generated by Xaheen CLI Terraform Generator

# Project configuration
project_name = "{{projectName}}"
environment  = "production"
owner        = "production-team@{{projectName}}.com"

# Regional configuration
{{#eq cloudProvider "aws"}}
region = "{{region}}"
{{/eq}}
{{#eq cloudProvider "azure"}}
location = "{{region}}"
{{/eq}}
{{#eq cloudProvider "gcp"}}
region     = "{{region}}"
project_id = "{{projectName}}-prod"
{{/eq}}

{{#if networking.vpc}}
# Networking configuration
{{#eq cloudProvider "aws"}}
vpc_cidr             = "10.2.0.0/16"
availability_zones   = ["{{region}}a", "{{region}}b", "{{region}}c"]
public_subnets       = ["10.2.1.0/24", "10.2.2.0/24", "10.2.3.0/24"]
private_subnets      = ["10.2.10.0/24", "10.2.20.0/24", "10.2.30.0/24"]
{{/eq}}
{{#eq cloudProvider "azure"}}
address_space       = ["10.2.0.0/16"]
public_subnets      = ["10.2.1.0/24", "10.2.2.0/24", "10.2.3.0/24"]
private_subnets     = ["10.2.10.0/24", "10.2.20.0/24", "10.2.30.0/24"]
{{/eq}}
{{#eq cloudProvider "gcp"}}
network_cidr        = "10.2.0.0/16"
public_subnets      = ["10.2.1.0/24", "10.2.2.0/24", "10.2.3.0/24"]
private_subnets     = ["10.2.10.0/24", "10.2.20.0/24", "10.2.30.0/24"]
{{/eq}}
enable_nat_gateway   = {{networking.enableNatGateway}}
enable_vpn_gateway   = {{networking.enableVpnGateway}}
{{/if}}

{{#if compute.instances}}
# Compute configuration (production settings)
{{#eq cloudProvider "aws"}}
instance_type = "{{compute.instances.[0].instanceType}}"
{{/eq}}
{{#eq cloudProvider "azure"}}
vm_size = "Standard_D2s_v3"
{{/eq}}
{{#eq cloudProvider "gcp"}}
machine_type = "e2-standard-2"
{{/eq}}
min_size            = {{compute.instances.[0].minSize}}
max_size            = {{compute.instances.[0].maxSize}}
desired_capacity    = {{compute.instances.[0].desiredCapacity}}
enable_load_balancer = {{compute.loadBalancer}}
enable_auto_scaling  = {{compute.autoScaling}}
{{/if}}

# Storage configuration (production settings)
enable_object_storage = {{storage.objectStorage}}
enable_file_system   = {{storage.fileSystem}}

{{#if storage.databases}}
{{#eq cloudProvider "aws"}}
db_engine            = "{{storage.databases.[0].engine}}"
db_version           = "{{storage.databases.[0].version}}"
db_instance_class    = "{{storage.databases.[0].instanceClass}}"
db_allocated_storage = {{storage.databases.[0].allocatedStorage}}
backup_window        = "{{storage.databases.[0].backupWindow}}"
maintenance_window   = "{{storage.databases.[0].maintenanceWindow}}"
{{/eq}}
{{#eq cloudProvider "azure"}}
db_sku_name = "P2"
{{/eq}}
{{#eq cloudProvider "gcp"}}
database_version = "POSTGRES_15"
db_tier         = "db-custom-4-15360"
db_disk_size    = 200
{{/eq}}
{{/if}}

# Security configuration (production settings)
enable_kms             = {{security.keyManagement}}
enable_secrets_manager = {{security.secretsManager}}
enable_waf            = {{security.waf}}
enable_certificate_manager = {{security.certificateManager}}
iam_roles             = {{#if security.iamRoles}}{{toJson security.iamRoles}}{{else}}[]{{/if}}

# Monitoring configuration (production settings)
enable_cloudwatch = {{monitoring.cloudWatch}}
enable_logging    = {{monitoring.logging}}
enable_alerting   = {{monitoring.alerting}}
enable_tracing    = {{monitoring.tracing}}

# Compliance configuration (production settings)
encryption_enabled     = {{compliance.encryption}}
backup_enabled        = {{compliance.backup}}
backup_retention_days = {{compliance.retention}}
audit_logs_enabled    = {{compliance.auditLogs}}

# Production-specific settings
alert_email = "production-alerts@{{projectName}}.com"
alert_phone = "+1234567890"  # Replace with actual phone number
domain_name = "{{projectName}}.com"

# High availability settings
{{#eq cloudProvider "aws"}}
multi_az = true
{{/eq}}
{{#eq cloudProvider "azure"}}
zone_redundant = true
{{/eq}}
{{#eq cloudProvider "gcp"}}
availability_type = "REGIONAL"
{{/eq}}