# Azure Configuration Environment Variables
# Copy this file to .env.azure and fill in your specific values

# Azure Subscription and Tenant
AZURE_SUBSCRIPTION_ID={{subscriptionId}}
AZURE_TENANT_ID={{tenantId}}
AZURE_CLIENT_ID=your-client-id-here
AZURE_CLIENT_SECRET=your-client-secret-here

# Resource Group Configuration
AZURE_RESOURCE_GROUP={{resourceGroupName}}
AZURE_LOCATION={{location}}

# Environment
NODE_ENV={{environment}}
PROJECT_NAME=xaheen-project
PROJECT_OWNER=xaheen-team
COST_CENTER=engineering

# Key Vault Configuration
AZURE_KEYVAULT_NAME=your-keyvault-name
AZURE_KEYVAULT_URL=https://your-keyvault-name.vault.azure.net/

# Service Bus Configuration
AZURE_SERVICEBUS_NAMESPACE=your-servicebus-namespace
AZURE_SERVICEBUS_CONNECTION_STRING=Endpoint=sb://your-servicebus-namespace.servicebus.windows.net/;SharedAccessKeyName=RootManageSharedAccessKey;SharedAccessKey=your-key

# SQL Database Configuration
AZURE_SQL_SERVER=your-sql-server
AZURE_SQL_DATABASE=your-database-name
AZURE_SQL_CONNECTION_STRING=Server=tcp:your-sql-server.database.windows.net,1433;Database=your-database-name;Authentication=Active Directory Default;Encrypt=true;

# Storage Account Configuration
AZURE_STORAGE_ACCOUNT_NAME=your-storage-account
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=your-storage-account;EndpointSuffix=core.windows.net

# Cosmos DB Configuration
AZURE_COSMOSDB_ENDPOINT=https://your-cosmosdb-account.documents.azure.com:443/
AZURE_COSMOSDB_KEY=your-cosmosdb-key
AZURE_COSMOSDB_DATABASE_NAME=your-database

# Redis Cache Configuration
AZURE_REDIS_HOSTNAME=your-redis-cache.redis.cache.windows.net
AZURE_REDIS_PORT=6380
AZURE_REDIS_ACCESS_KEY=your-redis-access-key

# Application Insights Configuration
AZURE_APPLICATION_INSIGHTS_INSTRUMENTATION_KEY=your-instrumentation-key
AZURE_APPLICATION_INSIGHTS_CONNECTION_STRING=InstrumentationKey=your-instrumentation-key;IngestionEndpoint=https://your-region.in.applicationinsights.azure.com/

# Log Analytics Configuration
AZURE_LOG_ANALYTICS_WORKSPACE_ID=your-workspace-id
AZURE_LOG_ANALYTICS_SHARED_KEY=your-shared-key

# AI Services Configuration
AZURE_AI_SERVICES_ENDPOINT=https://your-region.api.cognitive.microsoft.com/
AZURE_AI_SERVICES_KEY=your-ai-services-key
AZURE_AI_SERVICES_REGION={{location}}

# Azure OpenAI Configuration
AZURE_OPENAI_ENDPOINT=https://your-openai-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your-openai-key
AZURE_OPENAI_API_VERSION=2024-02-15-preview
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4

# Speech Services Configuration
AZURE_SPEECH_KEY=your-speech-key
AZURE_SPEECH_REGION={{location}}

# Computer Vision Configuration
AZURE_COMPUTER_VISION_ENDPOINT=https://your-region.api.cognitive.microsoft.com/
AZURE_COMPUTER_VISION_KEY=your-computer-vision-key

# Document Intelligence Configuration
AZURE_DOCUMENT_INTELLIGENCE_ENDPOINT=https://your-region.api.cognitive.microsoft.com/
AZURE_DOCUMENT_INTELLIGENCE_KEY=your-document-intelligence-key

# Language Services Configuration
AZURE_LANGUAGE_ENDPOINT=https://your-region.api.cognitive.microsoft.com/
AZURE_LANGUAGE_KEY=your-language-key

# Translator Configuration
AZURE_TRANSLATOR_KEY=your-translator-key
AZURE_TRANSLATOR_ENDPOINT=https://api.cognitive.microsofttranslator.com/
AZURE_TRANSLATOR_REGION={{location}}

# Event Grid Configuration
AZURE_EVENTGRID_TOPIC_ENDPOINT=https://your-topic.your-region-1.eventgrid.azure.net/api/events
AZURE_EVENTGRID_ACCESS_KEY=your-eventgrid-key

# Event Hubs Configuration
AZURE_EVENTHUBS_CONNECTION_STRING=Endpoint=sb://your-eventhubs-namespace.servicebus.windows.net/;SharedAccessKeyName=RootManageSharedAccessKey;SharedAccessKey=your-key
AZURE_EVENTHUBS_NAME=your-eventhub-name

# Notification Hubs Configuration
AZURE_NOTIFICATION_HUBS_CONNECTION_STRING=Endpoint=sb://your-namespace.servicebus.windows.net/;SharedAccessKeyName=DefaultFullSharedAccessSignature;SharedAccessKey=your-key
AZURE_NOTIFICATION_HUBS_NAME=your-notification-hub

# Search Service Configuration
AZURE_SEARCH_SERVICE_NAME=your-search-service
AZURE_SEARCH_ADMIN_KEY=your-search-admin-key
AZURE_SEARCH_ENDPOINT=https://your-search-service.search.windows.net

# Container Registry Configuration
AZURE_CONTAINER_REGISTRY_NAME=your-registry-name
AZURE_CONTAINER_REGISTRY_SERVER=your-registry-name.azurecr.io

# Azure Kubernetes Service Configuration
AZURE_AKS_CLUSTER_NAME=your-aks-cluster
AZURE_AKS_RESOURCE_GROUP={{resourceGroupName}}

# API Management Configuration
AZURE_APIM_SERVICE_NAME=your-apim-service
AZURE_APIM_RESOURCE_GROUP={{resourceGroupName}}
AZURE_APIM_SUBSCRIPTION_KEY=your-subscription-key

# Security and Networking
AZURE_VIRTUAL_NETWORK_NAME=your-vnet
AZURE_SUBNET_NAME=your-subnet
AZURE_NETWORK_SECURITY_GROUP=your-nsg

# Backup and Disaster Recovery
AZURE_BACKUP_VAULT_NAME=your-backup-vault
AZURE_BACKUP_POLICY_NAME=your-backup-policy

# Monitoring and Alerting
AZURE_ALERT_ACTION_GROUP=your-action-group
AZURE_MONITOR_WORKSPACE=your-monitor-workspace

# Development and Testing
AZURE_DEV_TEST_LABS_NAME=your-dev-test-lab
AZURE_DEV_SUBSCRIPTION_ID=your-dev-subscription-id

# Custom Domain (if applicable)
{{#if customDomain}}
CUSTOM_DOMAIN={{customDomain}}
SSL_CERTIFICATE_NAME=your-ssl-certificate
{{/if}}

# Feature Flags
FEATURE_FLAG_AZURE_AD_AUTH=true
FEATURE_FLAG_KEY_VAULT_INTEGRATION=true
FEATURE_FLAG_SERVICE_BUS_MESSAGING=true
FEATURE_FLAG_AI_SERVICES=true
FEATURE_FLAG_MONITORING=true
FEATURE_FLAG_AUTO_SCALING=true