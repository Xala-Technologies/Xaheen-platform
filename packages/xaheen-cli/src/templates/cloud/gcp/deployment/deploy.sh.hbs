# Main deployment function
main() {
    log_info "üöÄ Starting {{projectName}} GCP deployment..."
    echo "Project: $PROJECT_ID"
    echo "Region: $REGION"
    echo "Environment: $ENVIRONMENT"
    echo
    
    # Confirm deployment
    read -p "Do you want to proceed with the deployment? (y/N): " confirm
    if [[ ! $confirm == [yY] && ! $confirm == [yY][eE][sS] ]]; then
        log_info "Deployment cancelled"
        exit 0
    fi
    
    # Set trap for cleanup
    trap cleanup EXIT
    
    # Execute deployment steps
    check_prerequisites
    authenticate_gcloud
    enable_apis
    create_terraform_state_bucket
    run_tests
    deploy_terraform
    deploy_functions
    deploy_firestore
    configure_storage
    deploy_secrets
    setup_monitoring
    health_check
    print_summary
    
    log_success "‚ú® Deployment completed successfully!"
}

# Handle script arguments
case "${1:-}" in
    --help|-h)
        echo "Usage: $0 [options]"
        echo
        echo "Options:"
        echo "  --help, -h          Show this help message"
        echo "  --check-prereqs     Only check prerequisites"
        echo "  --terraform-only    Only deploy Terraform infrastructure"
        echo "  --functions-only    Only deploy Cloud Functions"
        echo "  --dry-run          Show what would be deployed without executing"
        echo
        echo "Environment variables:"
        echo "  ENVIRONMENT         Deployment environment (default: production)"
        echo "  PROJECT_ID          GCP Project ID (default: {{projectId}})"
        echo "  REGION              GCP Region (default: {{region}})"
        exit 0
        ;;
    --check-prereqs)
        check_prerequisites
        exit 0
        ;;
    --terraform-only)
        check_prerequisites
        authenticate_gcloud
        enable_apis
