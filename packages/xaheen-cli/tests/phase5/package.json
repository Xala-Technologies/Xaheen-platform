{
  "name": "@xaheen-cli/phase5-tests",
  "version": "1.0.0",
  "description": "Phase 5: Frontend-Backend Integration Testing for Xaheen CLI",
  "private": true,
  "type": "module",
  "scripts": {
    "test": "bun run run-phase5-tests.ts",
    "test:verbose": "bun run run-phase5-tests.ts --verbose",
    "test:parallel": "bun run run-phase5-tests.ts --parallel",
    "test:monorepo": "bun run run-phase5-tests.ts --suite monorepo-setup",
    "test:service-gen": "bun run run-phase5-tests.ts --suite service-generation",
    "test:api-client": "bun run run-phase5-tests.ts --suite api-client-integration",
    "test:e2e-crud": "bun run run-phase5-tests.ts --suite fullstack-crud-e2e",
    "test:e2e-auth": "bun run run-phase5-tests.ts --suite auth-flow-e2e",
    "test:integration": "vitest run integration/",
    "test:e2e": "playwright test e2e/",
    "test:watch": "vitest watch integration/",
    "playwright:install": "playwright install",
    "playwright:ui": "playwright test --ui",
    "clean": "rm -rf node_modules coverage test-results playwright-report",
    "dev": "vitest watch",
    "coverage": "vitest run --coverage",
    "lint": "eslint . --ext .ts,.tsx",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@test-workspace/shared": "workspace:*",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "supertest": "^6.3.3"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@types/supertest": "^6.0.2",
    "@vitest/coverage-v8": "^1.0.0",
    "playwright": "^1.40.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0",
    "zod": "^3.22.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  },
  "keywords": [
    "xaheen",
    "cli",
    "testing",
    "integration",
    "frontend",
    "backend",
    "e2e",
    "fullstack"
  ],
  "author": "Xaheen Team",
  "license": "MIT"
}