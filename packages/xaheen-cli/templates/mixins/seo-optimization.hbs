{{!-- SEO Optimization Mixin - Search engine optimization features --}}

{/* SEO Optimization Mixin */}
{/* Structured Data */}
<script
  type="application/ld+json"
  dangerouslySetInnerHTML={{
    __html: JSON.stringify({
      "@context": "https://schema.org",
      "@type": "WebComponent",
      "name": "${componentName}",
      "description": "${description || `${componentName} component generated by Xaheen CLI`}",
      "author": {
        "@type": "Organization",
        "name": "Your Organization"
      },
      "dateCreated": new Date().toISOString(),
      "inLanguage": "nb-NO",
      "isAccessibleForFree": true,
      "accessibilityFeature": [
        "highContrastDisplay",
        "keyboardNavigation",
        "screenReaderSupport",
        "structuredNavigation"
      ],
      "accessibilityHazard": "none",
      "accessibilityControl": [
        "fullKeyboardControl",
        "fullMouseControl",
        "fullTouchControl"
      ]
    }, null, 2)
  }}
/>

{/* Open Graph Meta Tags (if component generates pages) */}
{{#if isPage}}
<Head>
  <meta property="og:type" content="website" />
  <meta property="og:title" content="${title || componentName}" />
  <meta property="og:description" content="${description || `${componentName} page`}" />
  <meta property="og:image" content="${ogImage || '/og-default.jpg'}" />
  <meta property="og:url" content="${canonicalUrl || ''}" />
  <meta property="og:locale" content="nb_NO" />
  <meta property="og:site_name" content="Your Site Name" />
  
  {/* Twitter Card */}
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content="${title || componentName}" />
  <meta name="twitter:description" content="${description || `${componentName} page`}" />
  <meta name="twitter:image" content="${ogImage || '/og-default.jpg'}" />
  
  {/* Norwegian specific meta */}
  <meta name="geo.region" content="NO" />
  <meta name="geo.country" content="Norway" />
  <meta name="language" content="Norwegian" />
  
  {/* Content Classification */}
  <meta name="classification" content="${nsmClassification || 'OPEN'}" />
  <meta name="audience" content="all" />
  <meta name="distribution" content="global" />
</Head>
{{/if}}

{/* Semantic HTML Enhancement */}
<div itemScope itemType="https://schema.org/WebPageElement">
  <meta itemProp="name" content="${componentName}" />
  <meta itemProp="description" content="${description || `${componentName} component`}" />
  <meta itemProp="accessibilityFeature" content="keyboardNavigation" />
  <meta itemProp="accessibilityFeature" content="screenReaderSupport" />
  <meta itemProp="inLanguage" content="nb-NO" />
</div>

{/* Breadcrumb Structured Data (if applicable) */}
{{#if breadcrumbs}}
<script
  type="application/ld+json"
  dangerouslySetInnerHTML={{
    __html: JSON.stringify({
      "@context": "https://schema.org",
      "@type": "BreadcrumbList",
      "itemListElement": breadcrumbs.map((crumb, index) => ({
        "@type": "ListItem",
        "position": index + 1,
        "name": crumb.name,
        "item": crumb.url
      }))
    }, null, 2)
  }}
/>
{{/if}}

{/* FAQ Structured Data (if component has FAQ content) */}
{{#if faqItems}}
<script
  type="application/ld+json"
  dangerouslySetInnerHTML={{
    __html: JSON.stringify({
      "@context": "https://schema.org",
      "@type": "FAQPage",
      "mainEntity": faqItems.map(item => ({
        "@type": "Question",
        "name": item.question,
        "acceptedAnswer": {
          "@type": "Answer",
          "text": item.answer
        }
      }))
    }, null, 2)
  }}
/>
{{/if}}

{/* Local Business (for Norwegian organizations) */}
{{#if isLocalBusiness}}
<script
  type="application/ld+json"
  dangerouslySetInnerHTML={{
    __html: JSON.stringify({
      "@context": "https://schema.org",
      "@type": "LocalBusiness",
      "name": "${businessName || 'Your Business'}",
      "description": "${businessDescription || ''}",
      "address": {
        "@type": "PostalAddress",
        "streetAddress": "${streetAddress || ''}",
        "addressLocality": "${city || ''}",
        "postalCode": "${postalCode || ''}",
        "addressCountry": "NO"
      },
      "geo": {
        "@type": "GeoCoordinates",
        "latitude": "${latitude || ''}",
        "longitude": "${longitude || ''}"
      },
      "openingHours": "${openingHours || 'Mo-Fr 09:00-17:00'}",
      "telephone": "${phone || ''}",
      "email": "${email || ''}",
      "url": "${websiteUrl || ''}",
      "priceRange": "${priceRange || ''}",
      "acceptsReservations": ${acceptsReservations || false}
    }, null, 2)
  }}
/>
{{/if}}

{/* Performance Optimization Meta */}
<link rel="preconnect" href="https://fonts.googleapis.com" />
<link rel="preconnect" href="https://fonts.gstatic.com" crossOrigin="" />
{{#if preloadResources}}
{{#each preloadResources}}
<link rel="preload" href="${this.href}" as="${this.as}" type="${this.type}" />
{{/each}}
{{/if}}

{/* DNS Prefetch for external resources */}
<link rel="dns-prefetch" href="//www.google-analytics.com" />
<link rel="dns-prefetch" href="//fonts.googleapis.com" />
<link rel="dns-prefetch" href="//cdn.jsdelivr.net" />

{/* Robots Meta */}
<meta name="robots" content="${robotsContent || 'index,follow,max-image-preview:large,max-snippet:-1,max-video-preview:-1'}" />

{/* Content Security Policy (CSP) Enhancement */}
<meta httpEquiv="Content-Security-Policy" content="
  default-src 'self';
  script-src 'self' 'unsafe-inline' 'unsafe-eval' *.google-analytics.com *.googletagmanager.com;
  style-src 'self' 'unsafe-inline' fonts.googleapis.com;
  font-src 'self' fonts.gstatic.com;
  img-src 'self' data: *.google-analytics.com *.googletagmanager.com;
  connect-src 'self' *.google-analytics.com *.analytics.google.com *.googletagmanager.com;
" />

{/* Canonical URL */}
{{#if canonicalUrl}}
<link rel="canonical" href="${canonicalUrl}" />
{{/if}}

{/* Alternate Language Versions */}
<link rel="alternate" hrefLang="nb-NO" href="${currentUrl || ''}" />
<link rel="alternate" hrefLang="nn-NO" href="${nynorskUrl || ''}" />
<link rel="alternate" hrefLang="en" href="${englishUrl || ''}" />
<link rel="alternate" hrefLang="x-default" href="${defaultUrl || ''}" />

{/* RSS Feed (if applicable) */}
{{#if rssUrl}}
<link rel="alternate" type="application/rss+xml" title="RSS Feed" href="${rssUrl}" />
{{/if}}

{/* Sitemap */}
<link rel="sitemap" type="application/xml" href="/sitemap.xml" />

{/* Apple Touch Icon and Favicon */}
<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
<link rel="manifest" href="/site.webmanifest" />

{/* Theme Color for Mobile Browsers */}
<meta name="theme-color" content="${themeColor || '#ffffff'}" media="(prefers-color-scheme: light)" />
<meta name="theme-color" content="${darkThemeColor || '#000000'}" media="(prefers-color-scheme: dark)" />

{/* Microsoft Tiles */}
<meta name="msapplication-TileColor" content="${tileColor || '#ffffff'}" />
<meta name="msapplication-config" content="/browserconfig.xml" />