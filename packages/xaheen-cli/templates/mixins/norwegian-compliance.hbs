{{!-- Norwegian Compliance Mixin - Adds Norwegian compliance features --}}

{/* Norwegian Compliance Features */}
<div className="sr-only" aria-live="polite">
  {/* WCAG AAA Screen reader support for Norwegian users */}
  <span lang="{{language}}">
    Innhold lastet for brukere med særlige behov
  </span>
</div>

{/* Norwegian Language Support */}
<div className="norwegian-compliance-wrapper">
  {/* Date and time formatting for Norwegian locale */}
  <time dateTime={new Date().toISOString()} className="sr-only">
    {new Intl.DateTimeFormat('{{language}}', {
      dateStyle: 'full',
      timeStyle: 'short'
    }).format(new Date())}
  </time>
  
  {/* Norwegian number formatting */}
  <div className="sr-only">
    {typeof window !== 'undefined' && (
      <span>
        Tallformat: {new Intl.NumberFormat('{{language}}').format(12345.67)}
      </span>
    )}
  </div>
  
  {/* Accessibility shortcuts in Norwegian */}
  <div className="skip-links" lang="{{language}}">
    <a 
      href="#main-content" 
      className="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 focus:z-50 focus:px-4 focus:py-2 focus:bg-primary focus:text-primary-foreground focus:rounded-md"
      tabIndex={1}
    >
      Hopp til hovedinnhold
    </a>
    <a 
      href="#navigation" 
      className="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-32 focus:z-50 focus:px-4 focus:py-2 focus:bg-primary focus:text-primary-foreground focus:rounded-md"
      tabIndex={2}
    >
      Hopp til navigasjon
    </a>
  </div>
  
  {/* Norwegian GDPR compliance notice */}
  <div className="gdpr-compliance" lang="{{language}}">
    <div className="sr-only">
      Denne komponenten er GDPR-kompatibel og følger norske personvernregler
    </div>
  </div>
  
  {/* High contrast mode indicator for Norwegian users */}
  <div className="high-contrast-indicator sr-only" lang="{{language}}">
    <span>Høykontrast modus tilgjengelig via tastatursnarvei Alt+Shift+H</span>
  </div>
  
  {/* Norwegian error announcements */}
  <div 
    id="norwegian-error-announcer" 
    className="sr-only" 
    aria-live="assertive" 
    aria-atomic="true"
    lang="{{language}}"
  >
    {/* Error messages will be announced here in Norwegian */}
  </div>
  
  {/* Norwegian keyboard navigation help */}
  <div className="keyboard-help sr-only" lang="{{language}}">
    <span>
      Bruk Tab for å navigere, Enter for å aktivere, og Escape for å lukke dialoger
    </span>
  </div>
  
  {/* Norwegian currency and measurement formatting */}
  <div className="sr-only" lang="{{language}}">
    <span>
      Valuta formateres som norske kroner (NOK)
    </span>
  </div>
</div>

{/* Norwegian compliance CSS classes and utilities */}
<style jsx>{`
  .norwegian-compliance-wrapper {
    /* Ensure proper text direction for Norwegian */
    direction: ltr;
    text-align: left;
  }
  
  /* Norwegian-specific focus indicators */
  .norwegian-focus:focus-visible {
    outline: 2px solid #0066cc;
    outline-offset: 2px;
    border-radius: 4px;
  }
  
  /* High contrast support for Norwegian accessibility standards */
  @media (prefers-contrast: high) {
    .norwegian-compliance-wrapper {
      border: 2px solid currentColor;
    }
  }
  
  /* Reduced motion support for Norwegian users */
  @media (prefers-reduced-motion: reduce) {
    .norwegian-compliance-wrapper * {
      animation-duration: 0.01ms !important;
      animation-iteration-count: 1 !important;
      transition-duration: 0.01ms !important;
    }
  }
  
  /* Print styles for Norwegian documents */
  @media print {
    .norwegian-compliance-wrapper {
      color: black !important;
      background: white !important;
    }
  }
`}</style>

{/* Norwegian compliance metadata */}
<meta 
  name="norwegian-compliance" 
  content="wcag-aaa,gdpr-compliant,nb-NO-locale" 
/>
<meta 
  name="accessibility-features" 
  content="skip-links,keyboard-navigation,screen-reader-support" 
  lang="{{language}}"
/>

{/* Norwegian language meta tags */}
<div className="sr-only">
  <meta httpEquiv="Content-Language" content="{{language}}" />
  <meta name="language" content="Norwegian" />
</div>