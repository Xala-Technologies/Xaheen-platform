<div class="min-h-screen bg-gray-50 font-sans">
  <!-- Error Boundary -->
  <div *ngIf="state.hasError" class="min-h-screen flex items-center justify-center px-6">
    <x-card class="max-w-md w-full shadow-lg">
      <x-card-content class="p-8 text-center">
        <h1 class="text-2xl font-bold text-red-600 mb-4">
          Application Error
        </h1>
        <p class="text-gray-600 mb-4" role="alert">
          {{ state.errorMessage || 'Something went wrong. Please try again.' }}
        </p>
        <x-button
          (click)="retry()"
          class="h-12 px-6 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg shadow-md transition-colors focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2"
          aria-label="Retry application"
        >
          Retry
        </x-button>
      </x-card-content>
    </x-card>
  </div>

  <!-- Main Application -->
  <div *ngIf="!state.hasError" class="min-h-screen">
    <router-outlet></router-outlet>
  </div>
</div>