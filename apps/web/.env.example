# Xaheen CLI Ecosystem - Environment Configuration Template
# Copy this file to .env.local and fill in your values

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME="Xaheen CLI Ecosystem"
NEXT_PUBLIC_APP_VERSION=6.2.0

# =============================================================================
# MCP SERVER CONFIGURATION
# =============================================================================
NEXT_PUBLIC_MCP_SERVER_URL=wss://mcp.xaheen.no
MCP_SERVER_API_KEY=your_mcp_api_key_here
MCP_SERVER_TIMEOUT=30000

# =============================================================================
# AI SERVICES
# =============================================================================
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
NEXT_PUBLIC_AI_PROVIDER=openai

# =============================================================================
# NORWEGIAN COMPLIANCE SERVICES
# =============================================================================
# BankID Configuration
BANKID_CLIENT_ID=your_bankid_client_id
BANKID_CLIENT_SECRET=your_bankid_client_secret
BANKID_REDIRECT_URI=http://localhost:3000/auth/bankid/callback

# Altinn Configuration
ALTINN_API_KEY=your_altinn_api_key
ALTINN_BASE_URL=https://platform.altinn.no
ALTINN_ORG_NUMBER=your_org_number

# Maskinporten Configuration
MASKINPORTEN_CLIENT_ID=your_maskinporten_client_id
MASKINPORTEN_CLIENT_SECRET=your_maskinporten_client_secret
MASKINPORTEN_SCOPE=altinn:instances.read

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql://username:password@localhost:5432/xaheen_cli_ecosystem
REDIS_URL=redis://localhost:6379

# =============================================================================
# MONITORING AND OBSERVABILITY
# =============================================================================
# Sentry Configuration
NEXT_PUBLIC_SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id
SENTRY_ORG=your_sentry_org
SENTRY_PROJECT=xaheen-cli-ecosystem
SENTRY_AUTH_TOKEN=your_sentry_auth_token

# PostHog Analytics
NEXT_PUBLIC_POSTHOG_KEY=your_posthog_key
NEXT_PUBLIC_POSTHOG_HOST=https://us.i.posthog.com

# New Relic (Optional)
NEW_RELIC_LICENSE_KEY=your_new_relic_license_key
NEW_RELIC_APP_NAME=xaheen-cli-ecosystem-web

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
NEXTAUTH_SECRET=your_nextauth_secret_key_here
NEXTAUTH_URL=http://localhost:3000

# Encryption Keys
ENCRYPT_KEY=your_32_character_encryption_key_
JWT_SECRET=your_jwt_secret_key_here

# CORS Origins
CORS_ORIGINS=http://localhost:3000,https://xaheen.no

# =============================================================================
# FEATURE FLAGS
# =============================================================================
NEXT_PUBLIC_FEATURE_AI_ASSISTANT=true
NEXT_PUBLIC_FEATURE_REALTIME_COLLABORATION=true
NEXT_PUBLIC_FEATURE_ADVANCED_ANALYTICS=false
NEXT_PUBLIC_FEATURE_ENTERPRISE_AUTH=false

# =============================================================================
# LOCALIZATION
# =============================================================================
NEXT_PUBLIC_DEFAULT_LOCALE=en
NEXT_PUBLIC_SUPPORTED_LOCALES=en,nb-NO,fr,ar

# =============================================================================
# PERFORMANCE OPTIMIZATION
# =============================================================================
NEXT_PUBLIC_CDN_URL=https://cdn.xaheen.no
NEXT_PUBLIC_IMAGE_OPTIMIZATION=true
NEXT_PUBLIC_BUNDLE_ANALYZER=false

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================
ANALYZE_BUNDLE=false
DISABLE_ESLINT=false
TURBOPACK=true

# =============================================================================
# CLOUDFLARE CONFIGURATION (for deployment)
# =============================================================================
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token
CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id
CLOUDFLARE_ZONE_ID=your_cloudflare_zone_id

# =============================================================================
# WEBHOOK ENDPOINTS
# =============================================================================
WEBHOOK_SECRET=your_webhook_secret_key
GITHUB_WEBHOOK_SECRET=your_github_webhook_secret

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
FROM_EMAIL=noreply@xaheen-ai.no

# =============================================================================
# LICENSE VALIDATION
# =============================================================================
LICENSE_SERVER_URL=https://license.xaheen.no
LICENSE_PUBLIC_KEY=your_license_public_key