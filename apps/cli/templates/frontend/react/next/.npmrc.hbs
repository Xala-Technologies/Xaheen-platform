# Xala Technologies GitHub Package Registry Configuration
@xala-technologies:registry=https://npm.pkg.github.com
@xaheen:registry=https://npm.pkg.github.com

# GitHub Personal Access Token (set this in your environment)
# Generate token at: https://github.com/settings/tokens
# Scopes needed: read:packages
//npm.pkg.github.com/:_authToken=${GITHUB_TOKEN}

# Fallback to npm registry for other packages
registry=https://registry.npmjs.org/

# Package manager configuration
{{#if (eq packageManager "pnpm")}}
# PNPM specific configuration
auto-install-peers=true
strict-peer-dependencies=false
shamefully-hoist=true
{{/if}}

{{#if (eq packageManager "bun")}}
# Bun specific configuration
install.auto=true
install.production=false
{{/if}}

# Security settings
audit-level=moderate
fund=false

# Performance settings
prefer-offline=true
cache-max=86400000

# Norwegian compliance settings
{{#if (eq compliance "norwegian")}}
# GDPR compliance for package telemetry
disable-telemetry=true
audit-signatures=true
{{/if}}
