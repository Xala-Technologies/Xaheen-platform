{
  "name": "{{projectName}}",
  "version": "1.0.0",
  "type": "xaheen-integrated",
  "ui": {
    "system": "xala",
    "version": "5.0.0",
    "architecture": "semantic-v5",
    "theme": "{{theme}}",
    "platform": "{{platform}}",
    "compliance": [{{#each compliance}}"{{this}}"{{#unless @last}}, {{/unless}}{{/each}}],
    "localization": {
      "defaultLocale": "{{defaultLocale}}",
      "supportedLocales": [{{#each supportedLocales}}"{{this}}"{{#unless @last}}, {{/unless}}{{/each}}]
    },
    "features": {
      "navbar": {{features.navbar}},
      "dashboard": {{features.dashboard}},
      "semanticComponents": true,
      "designTokens": true
    },
    "componentLibrary": {
      "components": [{{#each components}}"{{this}}"{{#unless @last}}, {{/unless}}{{/each}}],
      "dataComponents": [],
      "themeComponents": [],
      "layouts": [],
      "providers": [],
      "patterns": [],
      "tools": []
    }
  },
  "integrations": {
    "xaheen": {
      "enabled": true,
      "version": "2.0.0",
      "features": [{{#each xaheenFeatures}}"{{this}}"{{#unless @last}}, {{/unless}}{{/each}}],
      "autoSync": true,
      "platformSync": {},
      "hooks": {
        "preBuild": ".xaheen/hooks/pre-build.sh",
        "postGenerate": ".xaheen/hooks/post-generate.sh",
        "preLocalize": ".xaheen/hooks/pre-localize.sh"
      }
    }
  },
  "validation": {
    "semantic": {
      "zeroRawHTML": true,
      "mandatoryLocalization": true,
      "designTokens": true,
      "accessibility": true,
      "enterprise": {{validation.enterprise}}
    },
    "compliance": {
      "wcag": "{{validation.wcag}}",
      "norwegian": {{validation.norwegian}},
      "gdpr": {{validation.gdpr}},
      "iso27001": {{validation.iso27001}}
    }
  },
  "generators": {
    "components": {
      "defaultPlatform": "{{platform}}",
      "withTests": {{generators.withTests}},
      "withStories": {{generators.withStories}},
      "withAccessibility": true,
      "withLocalization": true
    }
  }
}