{
  "validation": {
    "xalaUI": {
      "enabled": true,
      "strict": {{strict}},
      "rules": {
        "zeroRawHTML": {
          "enabled": true,
          "level": "error",
          "forbiddenElements": [
            "div", "span", "p", "h1", "h2", "h3", "h4", "h5", "h6",
            "button", "input", "form", "ul", "ol", "li",
            "table", "tr", "td", "th", "thead", "tbody", "tfoot"
          ],
          "allowedExceptions": []
        },
        "mandatoryLocalization": {
          "enabled": true,
          "level": "error",
          "requireTranslationFunction": true,
          "translationFunctions": {
            {{#if_eq platform 'react'}}
            "react": ["t", "useTranslation"]
            {{/if_eq}}
            {{#if_eq platform 'nextjs'}}
            "nextjs": ["t", "useTranslations"]
            {{/if_eq}}
            {{#if_eq platform 'vue'}}
            "vue": ["$t", "useI18n"]
            {{/if_eq}}
            {{#if_eq platform 'angular'}}
            "angular": ["translate.instant", "TranslateService"]
            {{/if_eq}}
            {{#if_eq platform 'svelte'}}
            "svelte": ["$t", "t"]
            {{/if_eq}}
          },
          "exemptPatterns": [
            "className", "data-*", "aria-*", "id", "key"
          ]
        },
        "designTokens": {
          "enabled": true,
          "level": "error",
          "forbiddenPatterns": [
            "style={{", 
            "className=\".*\\[.*\\].*\"",
            "bg-\\[#[0-9a-fA-F]{6}\\]",
            "text-\\[#[0-9a-fA-F]{6}\\]"
          ],
          "requiredTokenPrefix": "@xala-technologies/ui-system"
        },
        "accessibility": {
          "enabled": true,
          "level": "error",
          "wcagLevel": "AAA",
          "requireAriaLabels": true,
          "requireKeyboardNavigation": true,
          "requireColorContrast": true,
          "minContrastRatio": 7.0,
          "requireFocusManagement": true
        },
        "semanticComponents": {
          "enabled": true,
          "level": "error",
          "requiredImports": [
            "@xala-technologies/ui-system"
          ],
          "allowedComponents": [
            "Container", "Section", "Heading", "Text", "Button",
            "Input", "Form", "Card", "List", "Navigation"
          ]
        }
      }
    },
    "compliance": {
      {{#if validation.norwegian}}
      "norwegian": {
        "enabled": true,
        "requirements": [
          "altinn-integration",
          "bankid-support",
          "norwegian-language",
          "data-protection",
          "accessibility-standard"
        ]
      },
      {{/if}}
      {{#if validation.gdpr}}
      "gdpr": {
        "enabled": true,
        "requirements": [
          "consent-management",
          "data-minimization",
          "right-to-erasure", 
          "data-portability",
          "privacy-by-design"
        ]
      },
      {{/if}}
      {{#if validation.wcag}}
      "wcag": {
        "enabled": true,
        "level": "{{validation.wcag}}",
        "guidelines": [
          "perceivable",
          "operable", 
          "understandable",
          "robust"
        ]
      },
      {{/if}}
      {{#if validation.iso27001}}
      "iso27001": {
        "enabled": true,
        "controls": [
          "access-control",
          "cryptography",
          "security-monitoring",
          "incident-management"
        ]
      }
      {{/if}}
    },
    "reporting": {
      "enabled": true,
      "formats": ["json", "html", "pdf"],
      "outputPath": "./reports/xala-ui-validation",
      "includeMetrics": true,
      "includeFixes": true
    },
    "autoFix": {
      "enabled": {{autoFix}},
      "rules": [
        "import-organization",
        "code-formatting",
        "simple-accessibility-fixes"
      ],
      "preserveUserCode": true
    }
  }
}