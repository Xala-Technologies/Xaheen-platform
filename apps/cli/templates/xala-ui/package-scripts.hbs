{
  "scripts": {
    {{#if existingScripts}}
    {{#each existingScripts}}
    "{{@key}}": "{{this}}",
    {{/each}}
    {{/if}}
    "ui:validate": "xaheen validate --ui --semantic --accessibility",
    "ui:generate": "xaheen add ui --platform {{platform}}",
    "ui:component": "xaheen add ui-component --interactive",
    "ui:migrate": "xaheen validate --ui --fix",
    "compliance:check": "xaheen validate --compliance --wcag-aaa",
    "compliance:audit": "xaheen validate --compliance --audit --export-report",
    "localization:extract": "xaheen localization --extract",
    "localization:validate": "xaheen validate --localization",
    {{#if platform_scripts}}
    {{#each platform_scripts}}
    "{{@key}}": "{{this}}",
    {{/each}}
    {{/if}}
    "xala:sync": "xaheen sync --xala-ui",
    "xala:cleanup": "xaheen validate --ui --cleanup",
    "xala:status": "xaheen status --xala-ui"
  }
}