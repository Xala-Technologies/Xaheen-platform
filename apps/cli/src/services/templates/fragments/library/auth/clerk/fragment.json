{
  "name": "clerk-auth",
  "version": "1.0.0",
  "description": "Clerk authentication with hosted UI and user management",
  "type": "auth",
  "context": ["web", "server"],
  "frameworks": ["react", "next"],
  "dependencies": [
    {
      "name": "@clerk/nextjs",
      "version": "^5.0.0",
      "type": "runtime",
      "condition": "eq framework 'next'"
    },
    {
      "name": "@clerk/clerk-react",
      "version": "^5.0.0",
      "type": "runtime",
      "condition": "eq framework 'react'"
    }
  ],
  "files": [
    {
      "path": "middleware.ts.hbs",
      "type": "template",
      "condition": "eq framework 'next'"
    },
    {
      "path": "app/layout.tsx.hbs",
      "type": "template",
      "condition": "eq framework 'next'",
      "merge": true
    },
    {
      "path": "components/auth/user-button.tsx.hbs",
      "type": "template"
    },
    {
      "path": "components/auth/sign-in-button.tsx.hbs",
      "type": "template"
    },
    {
      "path": "app/sign-in/[[...sign-in]]/page.tsx.hbs",
      "type": "template",
      "condition": "eq framework 'next'"
    },
    {
      "path": "app/sign-up/[[...sign-up]]/page.tsx.hbs",
      "type": "template",
      "condition": "eq framework 'next'"
    },
    {
      "path": "env.local.example.hbs",
      "type": "template"
    }
  ],
  "variables": {
    "authProvider": "clerk",
    "hasHostedUI": true,
    "hasUserButton": true,
    "supportsOAuth": true,
    "supportsMFA": true,
    "hasUserManagement": true
  },
  "compatibility": {
    "suggests": ["user-management", "rbac-basic"],
    "conflicts": ["better-auth", "auth0-auth"]
  }
}