{
  "name": "better-auth",
  "version": "1.0.0",
  "description": "Better Auth integration with full authentication flow",
  "type": "auth",
  "context": ["web", "server"],
  "frameworks": ["react", "next", "svelte", "solid"],
  "dependencies": [
    {
      "name": "better-auth",
      "version": "^1.0.0",
      "type": "runtime"
    },
    {
      "name": "@better-auth/react",
      "version": "^1.0.0",
      "type": "runtime",
      "condition": "eq framework 'react'"
    },
    {
      "name": "@better-auth/next",
      "version": "^1.0.0",
      "type": "runtime",
      "condition": "eq framework 'next'"
    },
    {
      "name": "@better-auth/svelte",
      "version": "^1.0.0",
      "type": "runtime",
      "condition": "eq framework 'svelte'"
    },
    {
      "name": "@better-auth/solid",
      "version": "^1.0.0",
      "type": "runtime",
      "condition": "eq framework 'solid'"
    }
  ],
  "files": [
    {
      "path": "lib/auth.ts.hbs",
      "type": "template",
      "condition": "eq context 'server'"
    },
    {
      "path": "lib/auth-client.ts.hbs",
      "type": "template",
      "condition": "eq context 'web'"
    },
    {
      "path": "components/auth/sign-in-form.tsx.hbs",
      "type": "template",
      "condition": "includes frameworks 'react'"
    },
    {
      "path": "components/auth/sign-up-form.tsx.hbs",
      "type": "template",
      "condition": "includes frameworks 'react'"
    },
    {
      "path": "components/auth/user-menu.tsx.hbs",
      "type": "template",
      "condition": "includes frameworks 'react'"
    },
    {
      "path": "components/auth/SignInForm.svelte.hbs",
      "type": "template",
      "condition": "eq framework 'svelte'"
    },
    {
      "path": "components/auth/SignUpForm.svelte.hbs",
      "type": "template",
      "condition": "eq framework 'svelte'"
    },
    {
      "path": "pages/auth/signin.tsx.hbs",
      "type": "template",
      "condition": "and (eq context 'web') (includes frameworks 'react')"
    },
    {
      "path": "pages/auth/signup.tsx.hbs",
      "type": "template",
      "condition": "and (eq context 'web') (includes frameworks 'react')"
    },
    {
      "path": "app/api/auth/[...auth]/route.ts.hbs",
      "type": "template",
      "condition": "and (eq context 'server') (eq framework 'next')"
    },
    {
      "path": "middleware.ts.hbs",
      "type": "template",
      "condition": "and (eq context 'server') (eq framework 'next')"
    }
  ],
  "variables": {
    "authProvider": "better-auth",
    "hasSignIn": true,
    "hasSignUp": true,
    "hasUserMenu": true,
    "supportsOAuth": true,
    "supportsMFA": true
  },
  "compatibility": {
    "suggests": ["notification-base", "user-management"],
    "conflicts": ["clerk-auth", "auth0-auth"]
  }
}