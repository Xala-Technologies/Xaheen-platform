{
  "name": "stripe-payments",
  "version": "1.0.0",
  "description": "Stripe payment integration with subscription and one-time payment support",
  "type": "payment",
  "context": ["web", "server"],
  "frameworks": ["react", "next", "svelte", "solid"],
  "dependencies": [
    {
      "name": "stripe",
      "version": "^14.0.0",
      "type": "runtime"
    },
    {
      "name": "@stripe/stripe-js",
      "version": "^2.0.0",
      "type": "runtime",
      "condition": "eq context 'web'"
    },
    {
      "name": "@stripe/react-stripe-js",
      "version": "^2.0.0",
      "type": "runtime",
      "condition": "and (eq context 'web') (includes frameworks 'react')"
    }
  ],
  "files": [
    {
      "path": "lib/stripe/stripe-client.ts.hbs",
      "type": "template",
      "condition": "eq context 'server'"
    },
    {
      "path": "lib/stripe/stripe-config.ts.hbs",
      "type": "template"
    },
    {
      "path": "lib/stripe/subscription-service.ts.hbs",
      "type": "template",
      "condition": "eq context 'server'"
    },
    {
      "path": "lib/stripe/payment-service.ts.hbs",
      "type": "template",
      "condition": "eq context 'server'"
    },
    {
      "path": "components/payment/checkout-form.tsx.hbs",
      "type": "template",
      "condition": "and (eq context 'web') (includes frameworks 'react')"
    },
    {
      "path": "components/payment/payment-element.tsx.hbs",
      "type": "template",
      "condition": "and (eq context 'web') (includes frameworks 'react')"
    },
    {
      "path": "components/payment/subscription-plans.tsx.hbs",
      "type": "template",
      "condition": "and (eq context 'web') (includes frameworks 'react')"
    },
    {
      "path": "components/payment/CheckoutForm.svelte.hbs",
      "type": "template",
      "condition": "and (eq context 'web') (eq framework 'svelte')"
    },
    {
      "path": "app/api/stripe/checkout/route.ts.hbs",
      "type": "template",
      "condition": "and (eq context 'server') (eq framework 'next')"
    },
    {
      "path": "app/api/stripe/webhooks/route.ts.hbs",
      "type": "template",
      "condition": "and (eq context 'server') (eq framework 'next')"
    },
    {
      "path": "app/api/stripe/subscriptions/route.ts.hbs",
      "type": "template",
      "condition": "and (eq context 'server') (eq framework 'next')"
    },
    {
      "path": "hooks/use-stripe.ts.hbs",
      "type": "template",
      "condition": "eq context 'web'"
    },
    {
      "path": "types/stripe.ts.hbs",
      "type": "template"
    }
  ],
  "variables": {
    "paymentProvider": "stripe",
    "supportsSubscriptions": true,
    "supportsOneTime": true,
    "hasWebhooks": true,
    "supportsMultiCurrency": true,
    "hasPaymentMethods": true
  },
  "compatibility": {
    "suggests": ["user-management", "notification-resend"],
    "conflicts": ["paypal-payments", "square-payments"]
  }
}