      },
      {
        "name": "patient-portal",
        "description": "Patient self-service portal",
        "path": "examples/patient-portal"
      }
    ],
    "troubleshooting": "Healthcare troubleshooting guide in docs/healthcare-troubleshooting.md"
  },
  
