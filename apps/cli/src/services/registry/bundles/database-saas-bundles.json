{
  "name": "database-saas-bundles",
  "version": "1.0.0",
  "description": "Database-focused service bundles for SaaS applications with multi-tenant considerations",
  "bundles": {
    "saas-database-starter": {
      "id": "db-saas-starter-2025-08-03",
      "name": "SaaS Database Starter",
      "displayName": "SaaS Database Starter Bundle",
      "description": "Essential database stack for SaaS MVP with PostgreSQL, basic caching, and development-friendly setup",
      "category": "saas",
      "subcategory": "database-starter",
      "maturity": "stable",
      "targetAudience": ["startups", "mvp", "small-teams"],
      "estimatedSetupTime": 30,
      "difficultyLevel": "beginner",
      "
": [
        {
          "serviceId": "database-postgresql-2025-01-03",
          "required": true,
          "priority": 100,
          "configuration": {
            "orm": "prisma",
            "enableDocker": true,
            "enableMigrations": true,
            "connectionPoolSize": 10,
            "enableSsl": false,
            "enablePartitioning": false,
            "enableFullTextSearch": false
          },
          "reason": "PostgreSQL provides excellent multi-tenant support and JSONB capabilities"
        },
        {
          "serviceId": "auth-better-auth-2025-01-03",
          "required": true,
          "priority": 95,
          "configuration": {
            "enableEmailVerification": true,
            "enableOAuth": false,
            "enableMFA": false,
            "sessionTimeout": 604800
          },
          "reason": "Better Auth provides type-safe authentication with PostgreSQL integration"
        }
      ],
      "optionalServices": [
        {
          "serviceId": "cache-redis-2025-01-03",
          "priority": 70,
          "configuration": {
            "enableSessionStore": true,
            "enableCaching": false,
            "maxMemory": "256mb"
          },
          "reason": "Redis for session storage improves auth performance"
        }
      ],
      "multiTenancy": {
        "strategy": "row-level-security",
        "isolation": "strict",
        "maxTenants": 100,
        "tenantProvisioning": "manual"
      },
      "scaling": {
        "expectedLoad": "low",
        "readReplicas": false,
        "sharding": false,
        "connectionPooling": true,
        "caching": false
      },
      "compliance": {
        "gdpr": false,
        "hipaa": false,
        "soc2": false,
        "dataResidency": false
      },
      "cost": {
        "estimatedMonthlyCost": "$50-150",
        "currency": "USD",
        "factors": ["database-hosting", "minimal-redis"]
      },
      "deployment": {
        "environments": ["development", "staging", "production"],
        "cloudProviders": ["aws", "gcp", "azure", "digitalocean"],
        "containerSupport": true,
        "serverlessSupport": true
      }
    },

