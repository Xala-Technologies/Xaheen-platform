{
  "id": "monitoring-sentry-2025-01-03",
  "name": "sentry",
  "displayName": "Sentry Error Monitoring",
  "description": "Application monitoring platform with error tracking, performance monitoring, and release health insights for production applications.",
  "type": "monitoring",
  "provider": "sentry",
  "version": "1.0.0",
  "author": "Sentry",
  "license": "Commercial",
  "homepage": "https://sentry.io",
  "repository": "https://github.com/getsentry/sentry-javascript",
  "keywords": ["monitoring", "error-tracking", "performance", "debugging", "observability"],
  "tags": ["enterprise", "saas", "monitoring", "debugging"],
  
  "frameworks": [
    {
      "name": "next",
      "versions": ["13.x", "14.x", "15.x"],
      "priority": 100
    },
    {
      "name": "react",
      "versions": ["17.x", "18.x", "19.x"],
      "priority": 90
    },
    {
      "name": "node",
      "versions": ["18.x", "20.x", "22.x"],
      "priority": 100
    },
    {
      "name": "svelte",
      "versions": ["4.x", "5.x"],
      "priority": 80
    }
  ],
  
  "platforms": [
    {
      "name": "web",
      "architecture": ["x86_64", "arm64"],
      "os": ["linux", "darwin", "windows"]
    },
    {
      "name": "serverless",
      "cloud": {
        "providers": ["vercel", "netlify", "cloudflare", "aws"],
        "services": ["functions", "edge-runtime", "lambda"]
      }
    }
  ],
  
  "runtimes": ["browser", "node", "bun", "deno"],
  
  "injectionPoints": [
    {
      "path": "lib/sentry.ts",
      "type": "file",
      "strategy": "replace",
      "priority": 100,
      "templatePath": "monitoring/sentry/client/sentry.ts.hbs"
    },
    {
      "path": "sentry.client.config.ts",
      "type": "file",
      "strategy": "replace",
      "priority": 95,
      "condition": "eq framework 'next'",
      "templatePath": "monitoring/sentry/next/sentry.client.config.ts.hbs"
    },
    {
      "path": "sentry.server.config.ts",
      "type": "file",
      "strategy": "replace",
      "priority": 90,
      "condition": "eq framework 'next'",
      "templatePath": "monitoring/sentry/next/sentry.server.config.ts.hbs"
    },
    {
      "path": "sentry.edge.config.ts",
      "type": "file",
      "strategy": "replace",
      "priority": 85,
      "condition": "and (eq framework 'next') config.enableEdgeRuntime",
      "templatePath": "monitoring/sentry/next/sentry.edge.config.ts.hbs"
    },
    {
      "path": "app/global-error.tsx",
      "type": "file",
      "strategy": "replace",
      "priority": 80,
      "condition": "eq framework 'next'",
      "templatePath": "monitoring/sentry/next/global-error.tsx.hbs"
    },
    {
      "path": "components/error-boundary.tsx",
      "type": "file",
      "strategy": "replace",
      "priority": 75,
      "condition": "includes frameworks 'next' 'react'",
      "templatePath": "monitoring/sentry/components/error-boundary.tsx.hbs"
    },
    {
      "path": "app/api/sentry-example-api/route.ts",
      "type": "file",
      "strategy": "replace",
      "priority": 70,
      "condition": "and (eq framework 'next') config.enableTestEndpoint",
      "templatePath": "monitoring/sentry/next/test-api-route.ts.hbs"
    },
    {
      "path": ".env.local.example",
      "type": "env-file",
      "strategy": "append",
      "priority": 10,
      "templatePath": "monitoring/sentry/env.hbs"
    }
  ],
  
  "envVariables": [
    {
      "name": "SENTRY_DSN",
      "description": "Sentry Data Source Name for error reporting",
      "required": true,
      "type": "url",
      "validation": {
        "pattern": "^https://[a-zA-Z0-9]+@[a-zA-Z0-9]+\\.ingest\\.sentry\\.io/[0-9]+$"
      },
      "sensitive": true
    },
    {
      "name": "SENTRY_ORG",
      "description": "Sentry organization slug",
      "required": false,
      "type": "string"
    },
    {
      "name": "SENTRY_PROJECT",
      "description": "Sentry project slug",
      "required": false,
      "type": "string"
    },
    {
      "name": "SENTRY_AUTH_TOKEN",
      "description": "Sentry authentication token for uploads",
      "required": false,
      "type": "secret",
      "sensitive": true,
      "environments": ["production", "staging"]
    },
    {
      "name": "SENTRY_ENVIRONMENT",
      "description": "Environment name for Sentry tracking",
      "required": false,
      "defaultValue": "development",
      "type": "string"
    },
    {
      "name": "SENTRY_RELEASE",
      "description": "Release version for Sentry tracking",
      "required": false,
      "type": "string"
    }
  ],
  
  "dependencies": [
    {
      "name": "@sentry/nextjs",
      "version": "^7.99.0",
      "type": "runtime",
      "condition": "eq framework 'next'",
      "reason": "Sentry SDK for Next.js applications"
    },
    {
      "name": "@sentry/react",
      "version": "^7.99.0",
      "type": "runtime",
      "condition": "eq framework 'react'",
      "reason": "Sentry SDK for React applications"
    },
    {
      "name": "@sentry/node",
      "version": "^7.99.0",
      "type": "runtime",
      "condition": "includes frameworks 'node' 'express'",
      "reason": "Sentry SDK for Node.js applications"
    },
    {
      "name": "@sentry/svelte",
      "version": "^7.99.0",
      "type": "runtime",
      "condition": "eq framework 'svelte'",
      "reason": "Sentry SDK for Svelte applications"
    },
    {
      "name": "@sentry/profiling-node",
      "version": "^1.3.5",
      "type": "runtime",
      "condition": "config.enableProfiling",
      "reason": "Sentry profiling for Node.js performance monitoring"
    }
  ],
  
  "postInjectionSteps": [
    {
      "name": "install-dependencies",
      "command": "npm install",
      "description": "Install Sentry monitoring dependencies",
      "timeout": 120000
    },
    {
      "name": "setup-sentry-project",
      "command": "echo 'Create your Sentry project at https://sentry.io'",
      "description": "Setup Sentry project and get DSN"
    },
    {
      "name": "configure-sentry-uploads",
      "command": "npx @sentry/wizard@latest -i sourcemaps",
      "description": "Configure Sentry source map uploads",
      "condition": "config.enableSourceMaps",
      "timeout": 60000
    },
    {
      "name": "verify-sentry-connection",
      "command": "node -e \"const Sentry = require('@sentry/node'); Sentry.init({ dsn: process.env.SENTRY_DSN }); Sentry.captureMessage('Sentry setup verification'); console.log('Sentry connection verified');\"",
      "description": "Verify Sentry connection",
      "condition": "env.SENTRY_DSN",
      "timeout": 30000
    }
  ],
  
  "requirements": {
    "node": {
      "min": "16.0.0",
      "lts": true
    },
    "memory": {
      "min": "128MB",
      "recommended": "256MB"
    },
    "network": {
      "internet": true,
      "ports": [443]
    }
  },
  
  "multiTenant": true,
  "compliance": ["gdpr", "ccpa", "soc2"],
  
  "scalingRequirements": {
    "horizontal": true,
    "vertical": true,
    "stateless": true
  },
  
  "category": "monitoring",
  "subcategory": "error-tracking",
  "maturity": "stable",
  "supportLevel": "commercial",
  
  "configSchema": {
    "type": "object",
    "properties": {
      "enablePerformanceMonitoring": {
        "type": "boolean",
        "default": true,
        "description": "Enable performance monitoring and tracing"
      },
      "enableProfiling": {
        "type": "boolean",
        "default": false,
        "description": "Enable continuous profiling"
      },
      "enableSourceMaps": {
        "type": "boolean",
        "default": true,
        "description": "Enable source map uploads for better error tracking"
      },
      "enableEdgeRuntime": {
        "type": "boolean",
        "default": false,
        "description": "Enable Sentry for Edge Runtime functions"
      },
      "enableTestEndpoint": {
        "type": "boolean",
        "default": false,
        "description": "Include test API endpoint for Sentry verification"
      },
      "tracesSampleRate": {
        "type": "number",
        "default": 0.1,
        "minimum": 0,
        "maximum": 1,
        "description": "Sample rate for performance traces (0.0 to 1.0)"
      },
      "profilesSampleRate": {
        "type": "number",
        "default": 0.1,
        "minimum": 0,
        "maximum": 1,
        "description": "Sample rate for profiling (0.0 to 1.0)"
      },
      "enableUserFeedback": {
        "type": "boolean",
        "default": false,
        "description": "Enable user feedback collection on errors"
      },
      "enableSessionReplay": {
        "type": "boolean",
        "default": false,
        "description": "Enable session replay for error investigation"
      },
      "beforeSend": {
        "type": "string",
        "default": "default",
        "enum": ["default", "filter-sensitive", "custom"],
        "description": "Event filtering strategy"
      },
      "enableAutoBreadcrumbs": {
        "type": "boolean",
        "default": true,
        "description": "Automatically capture breadcrumbs"
      }
    }
  },
  
  "defaultConfig": {
    "enablePerformanceMonitoring": true,
    "enableProfiling": false,
    "enableSourceMaps": true,
    "enableEdgeRuntime": false,
    "enableTestEndpoint": false,
    "tracesSampleRate": 0.1,
    "profilesSampleRate": 0.1,
    "enableUserFeedback": false,
    "enableSessionReplay": false,
    "beforeSend": "default",
    "enableAutoBreadcrumbs": true
  },
  
  "examples": [
    {
      "name": "basic-monitoring",
      "description": "Basic error tracking setup",
      "config": {
        "enablePerformanceMonitoring": true,
        "enableSourceMaps": true,
        "tracesSampleRate": 0.1
      }
    },
    {
      "name": "comprehensive-monitoring",
      "description": "Full monitoring with profiling and session replay",
      "config": {
        "enablePerformanceMonitoring": true,
        "enableProfiling": true,
        "enableSessionReplay": true,
        "enableUserFeedback": true,
        "tracesSampleRate": 0.5,
        "profilesSampleRate": 0.5
      }
    },
    {
      "name": "production-optimized",
      "description": "Production-optimized monitoring with filtering",
      "config": {
        "enablePerformanceMonitoring": true,
        "enableSourceMaps": true,
        "tracesSampleRate": 0.01,
        "beforeSend": "filter-sensitive"
      }
    }
  ],
  
  "testing": {
    "unit": {
      "framework": "jest",
      "testPaths": ["__tests__/monitoring"]
    },
    "integration": {
      "framework": "playwright",
      "services": ["sentry-test-mode"]
    }
  },
  
  "security": {
    "vulnerabilityScanning": {
      "enabled": true,
      "tools": ["npm-audit"]
    },
    "secretScanning": {
      "enabled": true,
      "patterns": ["SENTRY_DSN", "SENTRY_AUTH_TOKEN"]
    }
  },
  
  "compliance": {
    "standards": ["gdpr", "ccpa", "soc2"],
    "dataHandling": {
      "personalData": true,
      "encryption": true,
      "audit": true
    }
  },
  
  "createdAt": "2025-01-03T00:00:00.000Z",
  "updatedAt": "2025-01-03T00:00:00.000Z",
  "createdBy": "backend-expert-agent"
}