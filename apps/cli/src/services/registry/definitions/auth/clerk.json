{
  "id": "auth-clerk-2025-01-03",
  "name": "clerk",
  "displayName": "Clerk Authentication",
  "description": "Complete authentication and user management solution with pre-built UI components, advanced security features, and organization support.",
  "type": "auth",
  "provider": "clerk",
  "version": "1.0.0",
  "author": "Clerk",
  "license": "Commercial",
  "homepage": "https://clerk.com",
  "repository": "https://github.com/clerk/javascript",
  "keywords": ["auth", "authentication", "user-management", "organizations", "prebuilt-ui"],
  "tags": ["enterprise", "saas", "commercial", "ui-components"],
  
  "frameworks": [
    {
      "name": "next",
      "versions": ["13.x", "14.x", "15.x"],
      "priority": 100
    },
    {
      "name": "react",
      "versions": ["17.x", "18.x", "19.x"],
      "priority": 90
    },
    {
      "name": "remix",
      "versions": ["1.x", "2.x"],
      "priority": 80
    }
  ],
  
  "platforms": [
    {
      "name": "web",
      "architecture": ["x86_64", "arm64"],
      "os": ["linux", "darwin", "windows"]
    },
    {
      "name": "serverless",
      "cloud": {
        "providers": ["vercel", "netlify"],
        "services": ["functions", "edge-runtime"]
      }
    }
  ],
  
  "injectionPoints": [
    {
      "path": "lib/clerk.ts",
      "type": "file",
      "strategy": "replace",
      "priority": 100,
      "templatePath": "auth/clerk/server/clerk.ts.hbs"
    },
    {
      "path": "app/layout.tsx",
      "type": "file",
      "strategy": "inject-block",
      "priority": 90,
      "condition": "eq framework 'next'",
      "templatePath": "auth/clerk/next/layout-provider.tsx.hbs"
    },
    {
      "path": "middleware.ts",
      "type": "file",
      "strategy": "replace",
      "priority": 80,
      "condition": "eq framework 'next'",
      "templatePath": "auth/clerk/next/middleware.ts.hbs"
    },
    {
      "path": "components/auth/user-button.tsx",
      "type": "file",
      "strategy": "replace",
      "priority": 70,
      "templatePath": "auth/clerk/components/user-button.tsx.hbs"
    },
    {
      "path": "components/auth/sign-in-button.tsx",
      "type": "file",
      "strategy": "replace",
      "priority": 60,
      "templatePath": "auth/clerk/components/sign-in-button.tsx.hbs"
    },
    {
      "path": ".env.local.example",
      "type": "env-file",
      "strategy": "append",
      "priority": 10,
      "templatePath": "auth/clerk/env.hbs"
    }
  ],
  
  "envVariables": [
    {
      "name": "NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY",
      "description": "Clerk publishable key for client-side operations",
      "required": true,
      "type": "string"
    },
    {
      "name": "CLERK_SECRET_KEY",
      "description": "Clerk secret key for server-side operations",
      "required": true,
      "type": "secret",
      "sensitive": true
    },
    {
      "name": "NEXT_PUBLIC_CLERK_SIGN_IN_URL",
      "description": "Custom sign-in page URL",
      "required": false,
      "defaultValue": "/sign-in",
      "type": "string"
    },
    {
      "name": "NEXT_PUBLIC_CLERK_SIGN_UP_URL",
      "description": "Custom sign-up page URL",
      "required": false,
      "defaultValue": "/sign-up",
      "type": "string"
    },
    {
      "name": "NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL",
      "description": "Redirect URL after successful sign-in",
      "required": false,
      "defaultValue": "/dashboard",
      "type": "string"
    },
    {
      "name": "NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL",
      "description": "Redirect URL after successful sign-up",
      "required": false,
      "defaultValue": "/dashboard",
      "type": "string"
    }
  ],
  
  "dependencies": [
    {
      "name": "@clerk/nextjs",
      "version": "^4.29.0",
      "type": "runtime",
      "condition": "eq framework 'next'",
      "reason": "Next.js integration for Clerk"
    },
    {
      "name": "@clerk/clerk-react",
      "version": "^4.30.0",
      "type": "runtime",
      "condition": "eq framework 'react'",
      "reason": "React integration for Clerk"
    },
    {
      "name": "@clerk/remix",
      "version": "^2.8.0",
      "type": "runtime",
      "condition": "eq framework 'remix'",
      "reason": "Remix integration for Clerk"
    }
  ],
  
  "postInjectionSteps": [
    {
      "name": "install-dependencies",
      "command": "npm install",
      "description": "Install Clerk authentication dependencies",
      "timeout": 120000
    },
    {
      "name": "setup-clerk-dashboard",
      "command": "echo 'Configure your Clerk application at https://dashboard.clerk.com'",
      "description": "Configure Clerk application settings"
    }
  ],
  
  "requirements": {
    "node": {
      "min": "16.0.0",
      "lts": true
    }
  },
  
  "multiTenant": true,
  "compliance": ["gdpr", "ccpa", "soc2"],
  
  "scalingRequirements": {
    "horizontal": true,
    "vertical": true,
    "stateless": true
  },
  
  "category": "authentication",
  "subcategory": "managed-auth",
  "maturity": "stable",
  "supportLevel": "commercial",
  
  "configSchema": {
    "type": "object",
    "properties": {
      "enableOrganizations": {
        "type": "boolean",
        "default": false,
        "description": "Enable organization features"
      },
      "customPages": {
        "type": "boolean",
        "default": false,
        "description": "Use custom auth pages instead of Clerk's hosted pages"
      },
      "allowedRedirectOrigins": {
        "type": "array",
        "items": {
          "type": "string"
        },
        "default": ["http://localhost:3000"],
        "description": "Allowed redirect origins for OAuth"
      }
    }
  },
  
  "defaultConfig": {
    "enableOrganizations": false,
    "customPages": false,
    "allowedRedirectOrigins": ["http://localhost:3000"]
  },
  
  "examples": [
    {
      "name": "basic-setup",
      "description": "Basic Clerk authentication with hosted pages",
      "config": {
        "customPages": false
      }
    },
    {
      "name": "custom-pages",
      "description": "Custom authentication pages with Clerk components",
      "config": {
        "customPages": true
      }
    },
    {
      "name": "organizations-enabled",
      "description": "Multi-tenant setup with organization support",
      "config": {
        "enableOrganizations": true,
        "customPages": true
      }
    }
  ],
  
  "compliance": {
    "standards": ["gdpr", "ccpa", "soc2"],
    "dataHandling": {
      "personalData": true,
      "encryption": true,
      "audit": true
    }
  },
  
  "createdAt": "2025-01-03T00:00:00.000Z",
  "updatedAt": "2025-01-03T00:00:00.000Z",
  "createdBy": "backend-expert-agent"
}